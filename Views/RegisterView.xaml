<Window x:Class="Variant4.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Логин" />
        <TextBox x:Name="LoginBox" Margin="0 5"/>

        <TextBlock Text="Пароль" />
        <PasswordBox x:Name="PasswordBox" Margin="0 5"/>

        <TextBlock Text="ФИО" />
        <TextBox x:Name="FullNameBox" Margin="0 5"/>

        <TextBlock Text="Телефон" />
        <TextBox x:Name="PhoneBox" Margin="0 5"/>

        <Button Content="Зарегистрироваться" Margin="0 10" Click="Register_Click"/>
    </StackPanel>
</Window>
